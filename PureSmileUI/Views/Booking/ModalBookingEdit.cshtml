                                                {
                                                    if (Model.TreatmentCategoriesList[i].PictureUrl.IndexOf("://") != -1)
                                                    {
                                                    <text>@Model.TreatmentCategoriesList[i].PictureUrl</text>
                                                    }
                                                    else
                                                    {
                                                    <text>@Href("~" + Model.TreatmentCategoriesList[i].PictureUrl)</text>
                                                    }
                                                }" />
                                        </div>
                                        <div class="treatment-description" >
